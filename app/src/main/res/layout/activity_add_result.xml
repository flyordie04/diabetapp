<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    tools:context="com.example.mirek.diabetapp.AddResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="DODAJ BADANIE"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/txtDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:layout_marginEnd="49dp"
                android:layout_marginRight="49dp"
                android:layout_marginTop="22dp"
                android:layout_toLeftOf="@+id/textView10"
                android:layout_toStartOf="@+id/textView10"
                android:text="Data"
                app:layout_constraintBottom_toTopOf="@+id/btnDatePicker"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtDatePicker"
                android:layout_alignBottom="@+id/txtDatePicker"
                android:layout_marginLeft="41dp"
                android:layout_marginStart="41dp"
                android:layout_toEndOf="@+id/textView10"
                android:layout_toRightOf="@+id/textView10"
                android:text="Godzina"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="70dp" />

            <Button
                android:id="@+id/btnDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDatePicker"
                android:layout_marginTop="11dp"
                android:layout_toLeftOf="@+id/textView10"
                android:layout_toStartOf="@+id/textView10"
                android:text="Zmień datę"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="104dp" />

            <Button
                android:id="@+id/btnTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btnDatePicker"
                android:layout_alignBottom="@+id/btnDatePicker"
                android:layout_toEndOf="@+id/textView10"
                android:layout_toRightOf="@+id/textView10"
                android:text="Zmień godzinę"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTimePicker" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnTimePicker"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="Pomiar cukru"
                tools:layout_editor_absoluteX="163dp"
                tools:layout_editor_absoluteY="157dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnBluetooth"
                android:layout_centerHorizontal="true"
                android:onClick="addResult"
                android:text="Dodaj"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.523"
                app:layout_constraintStart_toStartOf="parent" />

            <NumberPicker
                android:id="@+id/pickNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/btnBluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pickNumber1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:onClick="bluetoothMode"
                android:text="Pobierz z glukometra" />

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
